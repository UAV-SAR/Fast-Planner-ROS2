<?xml version="1.0"?>
<package format="3">
  <name>rviz_plugins</name>
  <version>0.1.0</version>
  <description>
    Additional plugins for RViz
  </description>

  <maintainer email="eeshaojie@ust.hk">Shaojie Shen</maintainer>
  <maintainer email="wwuar@connect.ust.hk">William Wu</maintainer>

  <license>LGPLv3</license>
  <url type="website">http://ros.org/wiki/rviz_plugins</url>

  <buildtool_depend>ament_cmake</buildtool_depend>

  <depend>rclcpp</depend>
  <depend>rviz_common</depend>
  <depend>multi_map_server</depend>
  <depend>nav_msgs</depend>
  <depend>qtbase5-dev</depend>
  <depend>libqt5-core</depend>
  <depend>libqt5-gui</depend>
  <depend>libqt5-widgets</depend>
  <depend>rviz_ogre_vendor</depend>

  <export>
    <build_type>ament_cmake</build_type>
    <rviz plugin="${prefix}/plugin_description.xml"/>
  </export>
</package>